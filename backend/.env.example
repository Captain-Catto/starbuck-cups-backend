# Copy this file to .env and update with your actual values
# For Render deployment, these will be set as Environment Variables

# Environment Configuration
NODE_ENV=production
PORT=10000

# Database - Render will provide this automatically
DATABASE_URL="postgresql://username:password@host:port/database"

# Redis (Optional - can disable for free tier)
# REDIS_URL="redis://localhost:6379"

# JWT - Render will generate these automatically
JWT_SECRET="your-super-secret-key-render-will-generate"
JWT_EXPIRES_IN="7d"

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS="https://starbuck-cups-frontend.vercel.app,http://localhost:3000,http://127.0.0.1:3000"

# Messenger Platform (get from Facebook Developers)
MESSENGER_PAGE_ACCESS_TOKEN=""
MESSENGER_APP_SECRET=""
MESSENGER_VERIFY_TOKEN=""

# File Upload
MAX_FILE_SIZE=5242880  # 5MB
UPLOAD_PATH="uploads/"

# API Documentation  
API_DOCS_ENABLED=true
API_DOCS_PATH="/docs"
